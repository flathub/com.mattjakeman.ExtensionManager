{
    "app-id": "com.mattjakeman.ExtensionManager",
    "runtime": "org.gnome.Platform",
    "runtime-version": "43",
    "sdk": "org.gnome.Sdk",
    "command": "extension-manager",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--talk-name=org.gnome.Shell.Extensions",
        "--talk-name=org.gnome.SessionManager"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "blueprint-compiler",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler.git",
                    "commit": "87cedc2c7e48b01dc1b07aef937e2fe02111b18c",
                    "tag": "v0.2.0"
                }
            ]
        },
        {
            "name": "libbacktrace",
            "builddir": true,
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/ianlancetaylor/libbacktrace.git",
                    "commit": "8602fda64e78f1f46563220f2ee9f7e70819c51d"
                }
            ]
        },
        {
            "name": "text-engine",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/mjakeman/text-engine.git",
                    "commit": "379437b2b589a9414985dec9136b7b48bae76f9e",
                    "tag": "v0.1.0"
                }
            ]
        },
        {
            "name" : "extension-manager",
            "builddir" : true,
            "buildsystem" : "meson",
            "build-options" : {
            	"no-debuginfo" : true
            },
            "config-opts" : [ "-Ddevelopment=false" ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/mjakeman/extension-manager",
                    "commit" : "fbb564bb99100df6b2633fdaf15cca032f1bcf0f"
                }
            ]
        }
    ]
}
